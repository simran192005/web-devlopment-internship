{
    "manifest_version": 2,
    "name": "Customizable Wallpaper Extension",
    "version": "1.0",
    "description": "Select and apply wallpapers effortlessly.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  